<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/dfragment"
    android:background="#ededed">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#009688">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="#1f1e23"
                android:text="个人中心"
                android:textSize="20sp" />
        </RelativeLayout>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardMaxElevation="5dp"
        android:theme="@style/Theme.MaterialComponents.DayNight">

        <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="200dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/show_person"
                android:duplicateParentState="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"

                    android:src="@drawable/origin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1f1e23"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="签名："
                            android:textColor="#1f1e23"
                            android:textSize="15sp">
                        </TextView>


                        <TextView
                            android:id="@+id/qianming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textSize="15sp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:text="动态"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="1dp"
        android:layout_centerVertical="true"
        android:layout_height="35dp"
        android:layout_toRightOf="@+id/text_1"
        android:layout_marginLeft="50dp"
        android:background="#e4e4e4"/>

    <TextView
        android:id="@+id/text_2"

        android:text="关注"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_centerVertical="true"
        android:layout_height="35dp"
        android:layout_toLeftOf="@+id/text_3"
        android:layout_marginRight="50dp"
        android:background="#e4e4e4"/>

    <TextView
        android:id="@+id/text_3"
        android:text="粉丝"
        android:textSize="20sp"
        android:layout_marginRight="40dp"
       android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardMaxElevation="5dp"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/editting"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:duplicateParentState="true"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/edit"/>

        <TextView
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:text="编辑资料"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray7"/>

    <LinearLayout
        android:id="@+id/setting"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:duplicateParentState="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/setting"/>

        <TextView
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:text="系统设置"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/huiyuan"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:duplicateParentState="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/huiyuan"/>

        <TextView
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:text="我的会员"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray7"/>

    <LinearLayout
        android:id="@+id/jiangzhang"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:duplicateParentState="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/jiangzhang"/>

        <TextView
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:text="我的奖章"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray7"/>

    <LinearLayout

        android:id="@+id/redu"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:duplicateParentState="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/redu"/>

        <TextView
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:text="热度"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray7"/>

    <LinearLayout
        android:id="@+id/shichang"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:duplicateParentState="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/shichang"/>

        <TextView
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:text="时长"/>

    </LinearLayout>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>
</LinearLayout>

